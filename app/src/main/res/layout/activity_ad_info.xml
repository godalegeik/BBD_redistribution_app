<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_background"
    tools:context=".ui.Ads.AdInfoActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Redistribution_app.AppBarOverlay"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.Redistribution_app.PopupOverlay" />
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ad_info_text"
        android:layout_width="410dp"
        android:layout_height="562dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="51dp"
        android:isScrollContainer="true"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/ad_info_valid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ad_valid_date"
            android:textColor="@color/smokey_brown"
            app:layout_constraintBottom_toTopOf="@+id/ad_info_valid2"
            app:layout_constraintStart_toStartOf="@+id/ad_info_valid2"
            app:layout_constraintTop_toBottomOf="@+id/ad_info_name" />

        <TextView
            android:id="@+id/ad_info_org_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/org_name"
            android:textColor="@color/smokey_brown"
            app:layout_constraintBottom_toTopOf="@+id/ad_info_org_name2"
            app:layout_constraintStart_toStartOf="@+id/ad_info_org_name2"
            app:layout_constraintTop_toBottomOf="@+id/ad_info_created2" />

        <TextView
            android:id="@+id/ad_info_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="phone"
            android:textColor="@color/smokey_black"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/ad_info_comment2"
            app:layout_constraintStart_toStartOf="@+id/ad_info_comment2"
            app:layout_constraintTop_toBottomOf="@+id/ad_info_phone2" />

        <TextView
            android:id="@+id/ad_info_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="adress"
            android:textColor="@color/smokey_black"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/ad_info_email"
            app:layout_constraintStart_toStartOf="@+id/ad_info_email"
            app:layout_constraintTop_toBottomOf="@+id/ad_info_adress2" />

        <TextView
            android:id="@+id/ad_info_email2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email"
            android:textColor="@color/smokey_black"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/ad_info_phone2"
            app:layout_constraintStart_toStartOf="@+id/ad_info_phone2"
            app:layout_constraintTop_toBottomOf="@+id/ad_info_email" />

        <TextView
            android:id="@+id/ad_info_valid2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="valid date"
            android:textColor="@color/smokey_black"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/ad_info_created"
            app:layout_constraintStart_toStartOf="@+id/ad_info_created"
            app:layout_constraintTop_toBottomOf="@+id/ad_info_valid" />

        <TextView
            android:id="@+id/ad_info_adress2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/org_adress"
            android:textColor="@color/smokey_brown"
            app:layout_constraintBottom_toTopOf="@+id/ad_info_adress"
            app:layout_constraintStart_toStartOf="@+id/ad_info_adress"
            app:layout_constraintTop_toBottomOf="@+id/ad_info_org_name2" />

        <TextView
            android:id="@+id/ad_info_comment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="comment"
            android:textColor="@color/smokey_brown"
            app:layout_constraintBottom_toTopOf="@+id/ad_info_comment"
            app:layout_constraintStart_toStartOf="@+id/ad_info_comment"
            app:layout_constraintTop_toBottomOf="@+id/ad_info_phone" />

        <TextView
            android:id="@+id/ad_info_comment4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Raktažodžiai"
            android:textColor="@color/smokey_brown"
            app:layout_constraintBottom_toTopOf="@+id/ad_info_keys"
            app:layout_constraintStart_toStartOf="@+id/ad_info_keys" />

        <TextView
            android:id="@+id/ad_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="@color/smokey_black"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/ad_info_valid"
            app:layout_constraintStart_toStartOf="@+id/ad_info_valid"
            app:layout_constraintTop_toBottomOf="@+id/ad_info_name3" />

        <TextView
            android:id="@+id/ad_info_phone2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/org_phone"
            android:textColor="@color/smokey_brown"
            app:layout_constraintBottom_toTopOf="@+id/ad_info_phone"
            app:layout_constraintStart_toStartOf="@+id/ad_info_phone"
            app:layout_constraintTop_toBottomOf="@+id/ad_info_email2" />

        <TextView
            android:id="@+id/ad_info_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/ad_name"
            android:textColor="@color/smokey_brown"
            app:layout_constraintBottom_toTopOf="@+id/ad_info_name"
            app:layout_constraintStart_toStartOf="@+id/ad_info_name"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ad_info_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="60dp"
            android:text="comment"
            android:textColor="@color/smokey_black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ad_info_comment2" />

        <TextView
            android:id="@+id/ad_info_keys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="comment"
            android:textColor="@color/mango_tango"
            android:textSize="18sp"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.584"
            app:layout_constraintStart_toEndOf="@+id/ad_info_comment"
            app:layout_constraintTop_toTopOf="@+id/ad_info_comment" />

        <TextView
            android:id="@+id/ad_info_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ad_created_date"
            android:textColor="@color/smokey_brown"
            app:layout_constraintBottom_toTopOf="@+id/ad_info_created2"
            app:layout_constraintStart_toStartOf="@+id/ad_info_created2"
            app:layout_constraintTop_toBottomOf="@+id/ad_info_valid2" />

        <TextView
            android:id="@+id/ad_info_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/org_email"
            android:textColor="@color/smokey_brown"
            app:layout_constraintBottom_toTopOf="@+id/ad_info_email2"
            app:layout_constraintStart_toStartOf="@+id/ad_info_email2"
            app:layout_constraintTop_toBottomOf="@+id/ad_info_adress" />

        <TextView
            android:id="@+id/ad_info_created2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="created date"
            android:textColor="@color/smokey_black"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/ad_info_org_name"
            app:layout_constraintStart_toStartOf="@+id/ad_info_org_name"
            app:layout_constraintTop_toBottomOf="@+id/ad_info_created" />

        <TextView
            android:id="@+id/ad_info_org_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="org name"
            android:textColor="@color/smokey_black"
            android:textSize="18sp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/ad_info_adress2"
            app:layout_constraintStart_toStartOf="@+id/ad_info_adress2"
            app:layout_constraintTop_toBottomOf="@+id/ad_info_org_name"
            tools:visibility="visible" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ad_info_buttons"
            android:layout_width="170dp"
            android:layout_height="123dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ad_info_status">

            <Button
                android:id="@+id/ad_info_unreserve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="@string/unreserve"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/ad_info_reserve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="@string/reserve"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/ad_info_reserve_part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Rezervuoti dalį"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/ad_info_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                app:layout_constraintEnd_toEndOf="@+id/ad_info_unreserve"
                app:layout_constraintTop_toTopOf="@+id/ad_info_unreserve" />

            <Button
                android:id="@+id/ad_info_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/commit"
                app:layout_constraintBottom_toTopOf="@+id/ad_info_reserve"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/ad_info_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoText="false"
            android:text="ad_info_status"
            android:textColor="@color/smokey_black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/ad_info_buttons"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ad_info_status2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:autoText="false"
            android:text="@string/ad_status"
            android:textColor="@color/smokey_brown"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/ad_info_status"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ad_edit_text"
        android:layout_width="410dp"
        android:layout_height="476dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="196dp"
        android:isScrollContainer="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/choose_ad_valid2"
            android:layout_width="169dp"
            android:layout_height="36dp"
            android:layout_marginEnd="4dp"
            android:text="Rinktis datą"
            app:layout_constraintBottom_toBottomOf="@+id/ad_info_validE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ad_info_validE"
            app:layout_constraintTop_toTopOf="@+id/ad_info_validE" />

        <Button
            android:id="@+id/edit_ad_cancel"
            android:layout_width="123dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp"
            android:text="Atšaukti"
            app:backgroundTint="@color/mango_tango"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ad_info_commentE" />

        <Button
            android:id="@+id/edit_ad_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="92dp"
            android:layout_marginLeft="92dp"
            android:text="Patvirtinti"
            app:layout_constraintStart_toEndOf="@+id/edit_ad_cancel"
            app:layout_constraintTop_toTopOf="@+id/edit_ad_cancel" />

        <EditText
            android:id="@+id/ad_info_commentE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/comment"
            android:textColor="@color/smokey_black"
            android:textColorHint="@color/mellow_orange"
            app:layout_constraintBottom_toTopOf="@+id/edit_ad_cancel"
            app:layout_constraintStart_toStartOf="@+id/edit_ad_cancel"
            app:layout_constraintTop_toBottomOf="@+id/ad_info_comment2E" />

        <TextView
            android:id="@+id/ad_info_name3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ad_name"
            android:textColor="@color/smokey_brown"
            app:layout_constraintBottom_toTopOf="@+id/ad_info_nameE"
            app:layout_constraintStart_toStartOf="@+id/ad_info_nameE"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ad_info_validE"
            android:layout_width="189dp"
            android:layout_height="23dp"
            android:ems="10"
            android:hint="@string/ad_valid_date"
            android:inputType="date"
            android:textColor="@color/smokey_black"
            android:textColorHint="@color/mellow_orange"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/ad_info_comment2E"
            app:layout_constraintStart_toStartOf="@+id/ad_info_comment2E"
            app:layout_constraintTop_toBottomOf="@+id/ad_info_valid3E" />

        <TextView
            android:id="@+id/ad_info_valid3E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ad_valid_date"
            android:textColor="@color/smokey_brown"
            app:layout_constraintBottom_toTopOf="@+id/ad_info_validE"
            app:layout_constraintStart_toStartOf="@+id/ad_info_validE"
            app:layout_constraintTop_toBottomOf="@+id/ad_info_nameE" />

        <TextView
            android:id="@+id/ad_info_comment2E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comment"
            android:textColor="@color/smokey_brown"
            app:layout_constraintBottom_toTopOf="@+id/ad_info_commentE"
            app:layout_constraintStart_toStartOf="@+id/ad_info_commentE"
            app:layout_constraintTop_toBottomOf="@+id/ad_info_validE" />

        <EditText
            android:id="@+id/ad_info_nameE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/ad_name"
            android:textColor="@color/smokey_black"
            android:textColorHint="@color/mellow_orange"
            app:layout_constraintBottom_toTopOf="@+id/ad_info_valid3E"
            app:layout_constraintStart_toStartOf="@+id/ad_info_valid3E"
            app:layout_constraintTop_toBottomOf="@+id/ad_info_name3E" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>